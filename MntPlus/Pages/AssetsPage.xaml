                    <TextBlock FontFamily="{StaticResource ClarityCity-SemiBold}" Text="Nom" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource ColumnHeaderStyle}" Margin="20 0 0 0"/>
                        
