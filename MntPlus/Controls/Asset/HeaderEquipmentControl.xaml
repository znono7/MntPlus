<UserControl x:Class="MntPlus.WPF.HeaderEquipmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MntPlus.WPF"
             mc:Ignorable="d"  Height="64" Width="3200"
             d:DesignHeight="64" d:DesignWidth="3200">
    <Grid Background="{DynamicResource TertiaryBackgroundColor}">
        <Border Height="64" BorderThickness="0 0 0 1.2" BorderBrush="{DynamicResource LineColor}"/>
        <Grid TextBlock.TextAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Nom" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}"  />
            <TextBlock Grid.Column="1" Text="Image" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="2" Text="Description" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="3" Text="Statut" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="4" Text="Localisation" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="5" Text="Catégorie" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="6" Text="Fabricant" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="7" Text="Modèle" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="8" Text="Numéro de série" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="9" Text="" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="10" Text="Parent" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="11" Text="DM service " FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="12" Text="Date d'achat" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="13" Text="Prix d'achat" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
            <TextBlock Grid.Column="14" Text="Date Créée" FontFamily="{StaticResource ClarityCity-SemiBold}" Style="{DynamicResource ColumnHeaderStyle}" />
        </Grid>
    </Grid>
</UserControl>
